<%= semantic_form_for @student do |f| %>
  <%= f.input :year, label: "Year of study", as: :number, hint: "e.g. 3" %>
  <div class="grades">
  <%= f.semantic_fields_for :grades do |g| %>
    <%= render 'grade_fields', :f => g %>
  <% end %>
  <%= link_to_add_association "Add a grade", f, :grades %>
  </div>
  <%= f.actions do %>
    <%= f.submit "All done", class: "btn btn-primary" %>
  <% end %>
<% end %>
